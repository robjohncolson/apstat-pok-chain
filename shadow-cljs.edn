{:source-paths ["src"]
 :dependencies [[reagent "1.2.0"]
                [re-frame "1.4.0"]
                [com.cognitect/transit-cljs "0.8.280"]
                [cljs-ajax "0.8.4"]
                [bidi "2.1.6"]
                [hodgepodge "0.1.3"]]
 :dev-http {8000 "public"}
 :builds
 {:app {:target :browser
        :output-dir "public/js"
        :asset-path "/js"
        :modules {:main {:init-fn pok.core/init}}
        :dev {:compiler-options {:closure-defines {"re_frame.trace.trace_enabled_QMARK_" true}
                               :source-map true
                               :optimizations :none}}
        :release {:compiler-options {:optimizations :advanced
                                   :pretty-print false
                                   :source-map false
                                   :elide-asserts true
                                   :pseudo-names false
                                   :print-input-delimiter false
                                   :closure-warnings {:non-standard-jsdoc :off}}}}
  :test {:target :node-test
         :output-to "public/js/test.js"
         :autorun true
         :compiler-options {:optimizations :simple
                          :target :nodejs}}
  :performance {:target :browser
               :output-dir "public/js/performance"
               :asset-path "/js/performance"
               :modules {:perf {:init-fn pok.performance/run-performance-test-suite}}
               :compiler-options {:optimizations :advanced
                                :pretty-print false
                                :source-map false
                                :elide-asserts true}}
  :simulation {:target :browser
              :output-dir "public/js/simulation"
              :asset-path "/js/simulation"
              :modules {:sim {:init-fn pok.simulation/run-validation-suite}}
              :compiler-options {:optimizations :simple
                               :pretty-print true
                               :source-map true}}}}}
